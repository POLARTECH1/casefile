<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:casefile.desktop.ViewModels"
        xmlns:controls="using:casefile.desktop.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="casefile.desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="casefile.desktop">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <SplitView PanePlacement="Left"
               DisplayMode="CompactInline"
               IsPaneOpen="True"
               OpenPaneLength="{StaticResource Sidebar.Width.Expanded}"
               CompactPaneLength="{StaticResource Sidebar.Width.Compact}">
        <SplitView.Pane>
            <controls:NavBar />
        </SplitView.Pane>
    </SplitView>

</Window>
