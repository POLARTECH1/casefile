<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Border.app-card">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Md}" />
        <Setter Property="Background" Value="{DynamicResource Brush.Card}" />
        <Setter Property="Padding" Value="{DynamicResource Spacing.6}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width">400</Setter>
    </Style>
    <Style Selector="Border.app-card:pointerover">

    </Style>
    <Style Selector="Grid.app-card-layout">
        <Setter Property="RowSpacing" Value="40" />
    </Style>
    <Style Selector=".app-card-header">

    </Style>
    <Style Selector="Border.app-card-icon-container">
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Lg}" />
        <Setter Property="Padding" Value="{DynamicResource Spacing.2}" />
        <Setter Property="Background" Value="{DynamicResource Color.Blue-600}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />

    </Style>
    <Style Selector="LucideIcon.app-card-icon">
        <Setter Property="Foreground">
            <SolidColorBrush>White</SolidColorBrush>
        </Setter>
        <Setter Property="Size" Value="28"></Setter>
    </Style>
    <Style Selector="Border.app-card-settings-button">
    </Style>
    <Style Selector="TextBlock.app-card-description">
        <Setter Property="MaxLines" Value="5" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="WordEllipsis" />
    </Style>
    <Style Selector="LucideIcon.app-card-settings-icon">
        <Setter Property="Size" Value="17" />
    </Style>
    <Style Selector="TextBlock.app-card-title">
        <Setter Property="FontSize" Value="{DynamicResource Text.Xl}" />
        <Setter Property="FontWeight" Value="{DynamicResource Font.SemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Card.Foreground}" />
        <Setter Property="TextTrimming" Value="WordEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="MaxLines" Value="2" />
    </Style>
    <Style Selector="StackPanel.app-card-details-section">
        <Setter Property="Spacing" Value="10" />
    </Style>
    <Style Selector=".app-card-detail-row">

    </Style>
    <Style Selector=".app-card-detail-label">

    </Style>
    <Style Selector="TextBlock.app-card-detail-value">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Card.Foreground}" />
        <Setter Property="FontWeight" Value="{DynamicResource Font.Medium}" />
    </Style>
    <Style Selector="Border.app-card-actions-container">
        <Setter Property="BorderThickness" Value="0, 1, 0, 0" />
        <Setter Property="Padding" Value="0, 15, 0, 0"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
    </Style>
    <Style Selector=".app-card-actions-layout">
    </Style>
    <Style Selector="Button.app-card-primary-action-button">
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="Margin" Value="0,0,10, 0"></Setter>
    </Style>
    <Style Selector=".app-card-primary-action-button-content">

    </Style>
    <Style Selector=".app-card-primary-action-button-icon">

    </Style>
    <Style Selector=".app-card-primary-action-button-text">

    </Style>
    <Style Selector=".app-card-secondary-action-button">

    </Style>
    <Style Selector=".app-card-secondary-action-button-icon">

    </Style>
</Styles>