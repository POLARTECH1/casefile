<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================ -->
    <!--  Base Badge — à combiner avec une variante de couleur        -->
    <!--  Usage : <TextBox Classes="Badge Danger" />                  -->
    <!-- ============================================================ -->
    <Style Selector="TextBox.Badge">
        <Setter Property="FontSize"       Value="{DynamicResource Text.Xs}" />
        <Setter Property="FontWeight"     Value="{DynamicResource Font.Medium}" />
        <Setter Property="Padding"        Value="10,3" />
        <Setter Property="MinHeight"      Value="0" />
        <Setter Property="CornerRadius"   Value="{DynamicResource Radius.3Xl}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="IsReadOnly"     Value="True" />
        <Setter Property="Cursor"         Value="Arrow" />
        <!-- couleur par défaut : Secondary -->
        <Setter Property="Background"     Value="{DynamicResource Brush.Secondary}" />
        <Setter Property="Foreground"     Value="{DynamicResource Brush.Secondary.Foreground}" />
        <Setter Property="BorderBrush"    Value="{DynamicResource Brush.Border}" />
    </Style>

    <!-- Supprime l'anneau de focus et le survol pour la base -->
    <Style Selector="TextBox.Badge:pointerover">
        <Setter Property="Background"     Value="{DynamicResource Brush.Secondary}" />
        <Setter Property="BorderBrush"    Value="{DynamicResource Brush.Border}" />
    </Style>
    <Style Selector="TextBox.Badge:focus-within">
        <Setter Property="Background"     Value="{DynamicResource Brush.Secondary}" />
        <Setter Property="BorderBrush"    Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>


    <!-- ============================================================ -->
    <!--  Danger  (rouge)                                             -->
